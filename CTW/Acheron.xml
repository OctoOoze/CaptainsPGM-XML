        <cylinder base="181,10,992" radius="2" height="0"/>
    </spawn>
    <spawn team="purple" kit="purple">
        <cylinder base="181,10,1272" radius="2" height="0"/>
    </spawn>
    <default>
        <cylinder base="291,61,1132" radius="3" height="0"/>
