    <filter name="only-iron" parents="deny-blocks">
        <allow>
            <block>iron block</block>
        </allow>
    </filter>
    <filter name="wool-room-break" parents="deny-blocks">
        <allow>
            <block>gold block</block>
            <block>diamond block</block>
